<h1>Available Books</h1>
<p>Find me in app/views/books/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Price</th>
      <th>Author</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.content %></td>
        <td><%= book.price %></td>
        <td><%= book.author.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

