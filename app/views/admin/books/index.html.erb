<h1>Admin::Books#index</h1>
<p>Find me in app/views/admin/books/index.html.erb</p>

<h1>Books Available</h1>

<!-- iterate and display books -->
<% if @books.present? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Price</th>
        <th>Content</th>
        <th>Cover</th>
        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <% if book.bookcover.attached? %>
              <%= image_tag book.bookcover, class: "img_size" %>
            <% else %>
              <%= image_tag("http://lgimages.s3.amazonaws.com/gc-md.gif") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to 'New Book', new_admin_book_path %>
