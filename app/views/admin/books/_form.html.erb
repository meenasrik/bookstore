<%= form_for([:admin, @book]) do |form| %> 
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :bookcover %>
    <%= form.file_field :bookcover %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.collection_select(:author_id, Author.all, :id, :name, {prompt: "Select Author"}) %>
  </div>
  
  <div class="field">
    <%= form.label :price %>
    $<%= form.number_field :price, :step => 0.01 %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :file_content %>
    <%= form.file_field :file %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
