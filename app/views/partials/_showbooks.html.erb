<div class="c-container-page u-margin-left-small">
  <% @books.each do |book| %>
    <div class="c-card row u-margin-left-large">
      <div class="c-section">
        <% if book.bookcover.attached? %>
          <%= image_tag book.cover %>
        <% else %>
          <%= image_tag("http://lgimages.s3.amazonaws.com/gc-md.gif") %>
        <% end %>
        <ul class="c-navigation buttons_as_links">
          <li class="c-navigation__item  u-margin-left-small">
            <%= book.id %>
          </li>
          <% if current_user %>
            <li class="c-navigation__item  u-margin-left-small">
              <%= link_to 'Buy this', new_book_sale_path(book), class: "c-button c-button--focal" %>
            </li>
          <% else %>
            <li class="c-navigation__item  u-margin-left-small">
            <%= link_to 'Buy this', new_user_session_path, class: "c-button c-button--focal" %>
            </li>
          <% end %>
          <li class="c-navigation__item">
            <%= link_to 'Details', "/#{params[:controller]}/#{book.id}", class: "c-button c-button--focal" %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>



